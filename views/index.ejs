<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content.site.title.zh %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- 添加鼠标跟随元素 -->
    <div class="cursor-dot"></div>
    <div class="cursor-outline"></div>

    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <img src="/images/logo/logo_white.png" alt="Kings Club Logo">
            </div>
            <div class="nav-links">
                <% Object.keys(content.nav).forEach(function(key) { %>
                    <a href="#<%= key %>" data-lang="zh"><%= content.nav[key].zh %></a>
                    <a href="#<%= key %>" data-lang="en" style="display: none;"><%= content.nav[key].en %></a>
                <% }); %>
                <button id="langToggle" class="lang-toggle">
                    <span data-lang="zh">EN</span>
                    <span data-lang="en" style="display: none;">中</span>
                </button>
            </div>
        </div>
    </nav>

    <!-- 主页轮播 -->
    <section id="home" class="hero-slider">
        <div class="slider-container">
            <% content.hero.slides.forEach(function(slide, index) { %>
                <div class="slide <%= index === 0 ? 'active' : '' %>">
                    <img src="<%= slide.image %>" alt="<%= slide.title.zh %>">
                    <div class="slide-content">
                        <h1 data-lang="zh"><%= slide.title.zh %></h1>
                        <h1 data-lang="en" style="display: none;"><%= slide.title.en %></h1>
                        <p data-lang="zh"><%= slide.description.zh %></p>
                        <p data-lang="en" style="display: none;"><%= slide.description.en %></p>
                        <% if (index === 0) { %>
                            <div class="hero-social-links">
                                <% Object.entries(content.social).forEach(function([platform, data]) { %>
                                    <a href="<%= data.url %>" class="social-icon <%= platform %>">
                                        <i class="<%= data.icon %>"></i>
                                        <span><%= data.name %></span>
                                    </a>
                                <% }); %>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
            <button class="slider-arrow prev"><i class="fas fa-chevron-left"></i></button>
            <button class="slider-arrow next"><i class="fas fa-chevron-right"></i></button>
            <div class="slider-indicators"></div>
        </div>
    </section>

    <!-- 特色板块 -->
    <section class="features-section">
        <div class="container">
            <div class="features-grid">
                <% content.features.forEach(function(feature) { %>
                    <div class="feature-card coming-soon-card">
                        <div class="coming-soon-overlay">
                            <div class="coming-soon-content">
                                <h3 data-lang="zh"><%= feature.title.zh %></h3>
                                <h3 data-lang="en" style="display: none;"><%= feature.title.en %></h3>
                                <div class="coming-soon-text">Coming Soon</div>
                            </div>
                        </div>
                        <img src="<%= feature.image %>" alt="<%= feature.title.zh %>">
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- 关于我们 -->
    <section id="about" class="about-section">
        <div class="container">
            <div class="about-content">
                <div class="about-text">
                    <h2 data-lang="zh"><%= content.about.title.zh %></h2>
                    <h2 data-lang="en" style="display: none;"><%= content.about.title.en %></h2>
                    <p data-lang="zh"><%= content.about.content.zh %></p>
                    <p data-lang="en" style="display: none;"><%= content.about.content.en %></p>
                </div>
            </div>
        </div>
    </section>

    <!-- 全球业务 -->
    <section id="global" class="global-section">
        <div class="container">
            <h2 data-lang="zh"><%= content.offices.global.title.zh %></h2>
            <h2 data-lang="en" style="display: none;"><%= content.offices.global.title.en %></h2>
            <% content.offices.global.offices.forEach(function(office) { %>
                <div class="office-card">
                    <div class="office-image">
                        <img src="/images/la-office.jpg" alt="Office Image">
                    </div>
                    <div class="office-info">
                        <h3><%= office.name %></h3>
                        <p class="location"><i class="fas fa-map-marker-alt"></i> <%= office.location %></p>
                        <p class="description" data-lang="zh"><%= office.description.zh %></p>
                        <p class="description" data-lang="en" style="display: none;"><%= office.description.en %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>

    <!-- 中国业务 -->
    <section id="china" class="china-section">
        <div class="container">
            <h2 data-lang="zh"><%= content.offices.china.title.zh %></h2>
            <h2 data-lang="en" style="display: none;"><%= content.offices.china.title.en %></h2>
            <div class="office-card">
                <div class="office-image">
                    <img src="/images/sz-office.jpg" alt="Shenzhen Office">
                </div>
                <div class="office-info">
                    <h3><%= content.offices.china.name %></h3>
                    <p class="location"><i class="fas fa-map-marker-alt"></i> <%= content.offices.china.location %></p>
                    <p class="description" data-lang="zh"><%= content.offices.china.description.zh %></p>
                    <p class="description" data-lang="en" style="display: none;"><%= content.offices.china.description.en %></p>
                </div>
            </div>
        </div>
    </section>

    <!-- 页脚 -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-info">
                    <h3>Kings Club</h3>
                    <p data-lang="zh"><%= content.site.description.zh %></p>
                    <p data-lang="en" style="display: none;"><%= content.site.description.en %></p>
                </div>
                <div class="footer-links">
                    <% Object.keys(content.nav).forEach(function(key) { %>
                        <a href="#<%= key %>" data-lang="zh"><%= content.nav[key].zh %></a>
                        <a href="#<%= key %>" data-lang="en" style="display: none;"><%= content.nav[key].en %></a>
                    <% }); %>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Kings Club. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    <script src="/js/cursor.js"></script>
</body>
</html> 