<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- 更新为PNG格式的favicon -->
    <link rel="icon" type="image/png" href="<%= content.site.favicon %>">
    <link rel="shortcut icon" type="image/png" href="<%= content.site.favicon %>">
    
    <!-- 使用默认中文标题 -->
    <title><%= content.site.title.zh %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <!-- 添加鼠标跟随元素 -->
    <div class="cursor-dot"></div>
    <div class="cursor-outline"></div>

    <!-- 导航栏 -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <a href="/">
                    <img src="/images/logo/logo_white.png" alt="Kings Club Logo">
                </a>
            </div>
            <div class="nav-links">
                <a href="/">国王俱乐部</a>
                <a href="/about">关于我们</a>
                <a href="/contact">联系我们</a>
                <div class="lang-toggle" id="langToggle">
                    <span>中</span>
                    <span>EN</span>
                </div>
            </div>
        </div>
    </nav>

    <!-- 主页轮播 -->
    <div class="hero-section">
        <video class="hero-video" autoplay loop muted playsinline>
            <source src="<%= content.hero.video.path %>" type="video/mp4">
        </video>
        
        <!-- 添加中间悬浮文字 -->
        <div class="hero-text">
            <h1>国王俱乐部</h1>
            <h2>永不止步</h2>
        </div>
        
        <!-- 修改社交媒体链接部分 -->
        <div class="hero-social-links">
            <a href="#" class="social-icon">
                <i class="fas fa-book"></i>
                <span>小红书</span>
            </a>
            <a href="#" class="social-icon">
                <i class="fab fa-tiktok"></i>
                <span>抖音</span>
            </a>
            <a href="#" class="social-icon">
                <i class="fab fa-instagram"></i>
                <span>Instagram</span>
            </a>
            <a href="#" class="social-icon">
                <i class="fab fa-youtube"></i>
                <span>YouTube</span>
            </a>
        </div>
    </div>

    
    <!-- 特色板块 -->
    <section class="features-section">
        <div class="container">
            <div class="features-grid">
                <% content.features.forEach(function(feature) { %>
                    <div class="feature-card coming-soon-card">
                        <div class="coming-soon-overlay">
                            <div class="coming-soon-content">
                                <h3 data-lang="zh"><%= feature.title.zh %></h3>
                                <h3 data-lang="en" style="display: none;"><%= feature.title.en %></h3>
                                <div class="coming-soon-text">Coming Soon</div>
                            </div>
                        </div>
                        <img src="<%= feature.image %>" alt="<%= feature.title.zh %>">
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

        <!-- 页脚 -->
        <footer class="footer">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-info">
                        <h3>Kings Club</h3>
                        <p data-lang="zh"><%= content.site.description.zh %></p>
                        <p data-lang="en" style="display: none;"><%= content.site.description.en %></p>
                    </div>
                    <div class="footer-links">
                        <a href="/" data-lang="zh">国王俱乐部</a>
                        <a href="/" data-lang="en" style="display: none;">Kings Club</a>
                        <a href="/about" data-lang="zh">关于我们</a>
                        <a href="/about" data-lang="en" style="display: none;">About Us</a>
                        <a href="/contact" data-lang="zh">联系我们</a>
                        <a href="/contact" data-lang="en" style="display: none;">Contact Us</a>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; 2025 Kings Club. All rights reserved.</p>
                </div>
            </div>
        </footer>

    <script src="/js/main.js"></script>
    <script src="/js/cursor.js"></script>
    <script src="/js/navigation.js"></script>
</body>
</html> 