<!DOCTYPE html>
<html lang="<%= lang %>">
<%- include('partials/header') %>
<body>
    <!-- 引入动画元素 -->
    <%- include('partials/animations') %>
    
    <!-- 引入导航栏 -->
    <%- include('partials/nav') %>

    <!-- 主页轮播 -->
    <div class="hero-section">
        <video class="hero-video" autoplay loop muted playsinline>
            <source src="<%= content.hero.video.path %>" type="video/mp4">
        </video>
        
        <!-- 添加中间悬浮文字 -->
        <div class="hero-text">
            <h1 class="switchable-text" 
                data-zh="<%= content.hero.title.zh %>" 
                data-en="<%= content.hero.title.en %>">
                <%= content.hero.title.zh %>
            </h1>
        </div>
        
        <!-- 修改社交媒体链接部分 -->
        <div class="hero-social-links">
            <a href="<%= content.social.xiaohongshu.url %>" class="social-icon">
                <i class="fas fa-book"></i>
                <span>小红书</span>
            </a>
            <a href="<%= content.social.douyin.url %>" class="social-icon">
                <i class="fab fa-tiktok"></i>
                <span>抖音</span>
            </a>
            <a href="<%= content.social.instagram.url %>" class="social-icon">
                <i class="fab fa-instagram"></i>
                <span>Instagram</span>
            </a>
            <a href="<%= content.social.youtube.url %>" class="social-icon">
                <i class="fab fa-youtube"></i>
                <span>YouTube</span>
            </a>
        </div>
    </div>

    
    <!-- 特色板块 -->
    <section class="features-section">
        <div class="container">
            <div class="features-grid">
                <% content.features.forEach(function(feature) { %>
                    <div class="feature-card coming-soon-card">
                        <div class="coming-soon-overlay">
                            <div class="coming-soon-content">
                                <h3 data-lang="zh"><%= feature.title.zh %></h3>
                                <h3 data-lang="en" style="display: none;"><%= feature.title.en %></h3>
                                <div class="coming-soon-text">Coming Soon</div>
                            </div>
                        </div>
                        <img src="<%= feature.image %>" alt="<%= feature.title.zh %>">
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- 页面主要内容 -->
    <main>
        <!-- ... 页面特定内容 ... -->
    </main>

    <!-- 引入页脚 -->
    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
    <script src="/js/cursor.js"></script>
    <script src="/js/navigation.js"></script>
</body>
</html> 